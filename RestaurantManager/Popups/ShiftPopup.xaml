<?xml version="1.0" encoding="utf-8"?>

<popups:BasePopup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popups="clr-namespace:RestaurantManager.PopUps;assembly=RestaurantManager"
             xmlns:vm="clr-namespace:RestaurantManager.Popups;assembly=RestaurantManager"
             xmlns:converters="clr-namespace:RestaurantManager.Converters;assembly=RestaurantManager"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ShiftPopupViewModel}"
             x:Class="RestaurantManager.Popups.ShiftPopup">
            <StackLayout
        BackgroundColor="IndianRed"
        Margin="25, 0, 25, 25">
        <StackLayout.Resources>
           <ResourceDictionary>
               <converters:DateToStringConverter x:Key="DateToStringConverter"/>
           </ResourceDictionary>
        </StackLayout.Resources>
        <Grid Background="Teal" HorizontalOptions="FillAndExpand" Padding="15" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Text="{Binding Shift.User}"
                FontSize="Title"
                WidthRequest="200"
                BackgroundColor="Aqua"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start"/>
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Shift Type:"
                BackgroundColor="Aquamarine"
                FontSize="Medium"
                HorizontalOptions="Start"
                VerticalOptions="CenterAndExpand"/>
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Shift.Type}"
                FontSize="Caption"
                BackgroundColor="Aqua"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Start"/>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Text="Shift Hours:"
                BackgroundColor="Aquamarine"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start"/>
            
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Shift.Hours}"
                BackgroundColor="Aquamarine"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start"/>
            <DatePicker
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Date="{Binding Shift.Date}"
                Format="D"
                Margin="30, 0, 0, 30"
                HorizontalOptions="Fill"/>
        </Grid>
      
        <Button
            Text="Save" 
            Command="{Binding SaveCommand}"/>
        
        <Button
            Text="Delete"
            IsVisible="{Binding IsDeletePossible}"
            Command="{Binding DeleteCommand}"/>
    </StackLayout>
</popups:BasePopup>