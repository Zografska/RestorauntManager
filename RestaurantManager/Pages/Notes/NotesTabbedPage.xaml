<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManager.Pages.Notes.NotesTabbedPage"
             BarBackgroundColor="Bisque"
             SelectedTabColor="Blue"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:TabbedPage.TranslucencyMode="Opaque"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RestaurantManager.Pages.Notes;assembly=RestaurantManager"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:NotesTabbedPageViewModel}">
    <vm:NotesPage 
        Title ="My Notes" 
        NotesType="MyNotes"
        IsButtonVisible="False"/>
    
    <vm:NotesPage 
        Title ="Shared with Me" 
        NotesType="Shared"
        IsButtonVisible="True"/>
</TabbedPage>