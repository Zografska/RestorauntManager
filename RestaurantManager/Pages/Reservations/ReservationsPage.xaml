<?xml version="1.0" encoding="utf-8"?>

<base:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:base="clr-namespace:RestaurantManager.Pages.Base;assembly=RestaurantManager"
          xmlns:converters="clr-namespace:RestaurantManager.Converters;assembly=RestaurantManager"
          x:Class="RestaurantManager.Pages.Reservations.ReservationsPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:DateSelectionChangedEventArgsConverter x:Key="DateSelectionChangedEventArgsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <base:BasePage.ContentValue>
        <Grid BackgroundColor="LightYellow"
              Margin="10">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ColumnDefinitions="*,8*,*" VerticalOptions="Center">
                <Label Grid.Column="0" Text="-" HorizontalOptions="EndAndExpand"/>
                <Label Grid.Column="1" Text="DateTimeBrat" HorizontalOptions="CenterAndExpand"/>
                <Label Grid.Column="2" Text="-" HorizontalOptions="StartAndExpand"/>
            </Grid>
            <Grid Grid.Row="1" VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" 
                    BindableLayout.ItemsSource="{Binding DaysOfWeek}"
                             Orientation="Horizontal"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Padding="-5"
                    >
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Transparent" 
                                     CornerRadius="20"
                                     HorizontalOptions="FillAndExpand"
                                     HasShadow="False"
                                     BorderColor="Blue"
                                     VerticalOptions="FillAndExpand">
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Label Text="{Binding }"
                                           VerticalOptions="FillAndExpand"
                                           FontSize="16"
                                           Padding="0"
                                           HorizontalOptions="FillAndExpand"/> 
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                
                <StackLayout Grid.Row="2" 
                             BindableLayout.ItemsSource="{Binding Week1}"
                             Orientation="Horizontal">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Gold" 
                                   CornerRadius="20"
                                   HorizontalOptions="FillAndExpand"
                                   HasShadow="False"
                                   VerticalOptions="FillAndExpand">
                                <StackLayout>
                                    <Label Text="{Binding }"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"/> 
                                    <Ellipse BackgroundColor="Red" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <StackLayout Grid.Row="3" 
                             BindableLayout.ItemsSource="{Binding Week1}"
                             Orientation="Horizontal">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Gold" 
                                   CornerRadius="20"
                                   HorizontalOptions="FillAndExpand"
                                   HasShadow="False"
                                   VerticalOptions="FillAndExpand">
                                <StackLayout>
                                    <Label Text="{Binding }"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"/> 
                                    <Ellipse BackgroundColor="Red" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <StackLayout Grid.Row="4" 
                             BindableLayout.ItemsSource="{Binding Week1}"
                             Orientation="Horizontal">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Gold" 
                                   CornerRadius="20"
                                   HorizontalOptions="FillAndExpand"
                                   HasShadow="False"
                                   VerticalOptions="FillAndExpand">
                                <StackLayout>
                                    <Label Text="{Binding }"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"/> 
                                    <Ellipse BackgroundColor="Red" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <StackLayout Grid.Row="5" 
                             BindableLayout.ItemsSource="{Binding Week1}"
                             Orientation="Horizontal">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Gold" 
                                   CornerRadius="20"
                                   HorizontalOptions="FillAndExpand"
                                   HasShadow="False"
                                   VerticalOptions="FillAndExpand">
                                <StackLayout>
                                    <Label Text="{Binding }"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"/> 
                                    <Ellipse BackgroundColor="Red" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </Grid>
        </Grid>
    </base:BasePage.ContentValue>
</base:BasePage>

