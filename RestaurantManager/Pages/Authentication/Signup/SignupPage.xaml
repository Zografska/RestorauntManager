<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             x:Class="RestaurantManager.Pages.Authentication.Signup.SignupPage"
             xmlns:vm="clr-namespace:RestaurantManager.Pages.Authentication.Signup;assembly=RestaurantManager"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SignupPageViewModel}">
    <StackLayout
        VerticalOptions="Center"
        Margin="20">
        
        <Label
            Text="Create your account"
            HorizontalOptions="Center"
            TextColor="#4682B4"
            FontSize="30"
            Margin="0, 20" />
        
        <Entry
            Placeholder="E-mail"
            Keyboard="Email"
            Text="{Binding Email}" />
        
        <Entry
            Placeholder="Password"
            IsPassword="true"
            Text="{Binding Password}" />
        
        <Button
            Text="Sign Up"
            Command="{Binding SignUpCommand}"
            Margin="60, 40"
            BackgroundColor="#4682B4"
            TextColor="White" />
        
    </StackLayout>

</ContentPage>