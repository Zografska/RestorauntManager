<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManager.Controls.FrameButton"
             x:Name="Self">
    <Frame
        Margin="10"
        Padding="10"
        HasShadow="False"
        BackgroundColor="{Binding BackgroundColor, Source={x:Reference Self}}"
        BorderColor="{Binding BorderColor, Source={x:Reference Self}}"
        CornerRadius="{Binding CornerRadius, Source={x:Reference Self}}">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding FrameTappedCommand, Source={x:Reference Self}}"
                                  CommandParameter="{Binding FrameTappedCommandParameter, Source={x:Reference Self}}"/>
        </Frame.GestureRecognizers>
        <Label
            Text="{Binding Text, Source={x:Reference Self}}"
            FontSize="20"
            TextColor="{Binding TextColor, Source={x:Reference Self}}"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>
    </Frame>  
</ContentView>